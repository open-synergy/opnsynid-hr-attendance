<openerp>
    <data>
        <record id="hr_working_schedule_policy_view_form" model="ir.ui.view">
            <field name="name">hr.working_schedule_policy form</field>
            <field name="model">hr.working_schedule_policy</field>
            <field name="inherit_id" ref="hr_contract_multiple_working_schedule.hr_working_schedule_policy_view_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//notebook" position="inside">
                        <page name="timesheet_generation" string="Timesheet Generation">
                            <group name="timesheet_generation_1" colspan="4" col="2">
                                <field name="cron_id"/>
                                <field name="condition_python_code"/>
                                <field name="timesheet_period_computation_method"/>
                                <field name="python_code"/>
                            </group>
                        </page>
                    </xpath>
                    <xpath expr="//header" position="inside">
                        <button name="action_generate_timesheet" type="object" string="Generate Timesheet"/>
                        <button name="action_create_cron" type="object" string="Create Cron" attrs="{'invisible':[('cron_id','!=',False)]}"/>
                        <button name="action_delete_cron" type="object" string="Delete Cron" attrs="{'invisible':[('cron_id','=',False)]}"/>
                    </xpath>

                </data>
            </field>
        </record>
    </data>
</openerp>
